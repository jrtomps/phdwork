#include <fstream>
#include <iostream>
#include <vector>
using namespace std;


template<class T>
void
ReadFloatGatesFromFile(const Char_t* fname, vector<T>& vec1, vector<T>& vec2)
{
  ifstream file(fname,ifstream::in);
  if (! file.is_open()) 
    {
      cout << fname << " doesn't exist" << endl;
      return;
    }

  vec1.clear();
  vec2.clear();
  T val1, val2;

  while (1)
    {
      file >> val1 >> val2; file.ignore(100000,"\n"); file >> std::ws;
      if (file.eof())
	break;
      else if (file.bad())
	{
	  cout << "Bad bit set" << endl;
	  break;
	}
      else if (file.fail())
	{
	  cout << "Fail bit set" << endl;
	  break;
	}

      vec1.push_back(val1);
      vec2.push_back(val2);
    }

}
